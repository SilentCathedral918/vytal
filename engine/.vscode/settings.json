{
  "clang-format.assumeFilename": "${file}",
  "clang-format.style": "{ BasedOnStyle: Google, AlignConsecutiveDeclarations: true, AlignConsecutiveAssignments: true, IndentWidth: 4, ColumnLimit: 0, IndentPPDirectives: AfterHash}",

  "editor.cursorStyle": "block",
  "editor.tabSize": 4,
  "editor.indentSize": "tabSize",
  "editor.formatOnSave": true,
  "files.associations": {
    "*.h": "c",
    "functional": "c",
    "cstdint": "c",
    "charconv": "c",
    "optional": "c",
    "format": "c",
    "system_error": "c",
    "array": "c",
    "tuple": "c",
    "type_traits": "c",
    "utility": "c"
  }
}